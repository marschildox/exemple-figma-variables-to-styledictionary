{
  "source": [
  "tokens-prepared/_core-colors.json",
  "tokens-prepared/**/*.json"
  ],
  "platforms": {
    "css": {
      "transformGroup": "custom/css-plain",
      "buildPath": "build/css/",
      "doNotThrowOnResolutionErrors": true,
      "files": [
        {
          "destination": "variables.css",
          "format": "custom/css-theme-mode-attributes",
          "filter": "isDesignToken"
        }
      ]
    }
  }
}
